{
    "name": "tsipaddr",
    "version": "0.1.0",
    "scripts": {
        "lint": "tslint -c tslint.json -t verbose -p tsconfig.json",
        "test": "nyc ts-mocha tests/*.ts",
        "test-js": "npm run build && nyc mocha dist/tests/*.js",
        "build": "npm run clean && tsc --outDir dist/",
        "pack": "npm run test-js && npm pack",
        "clean": "rm -rf dist/",
        "cleandoc": "rm -rf docs/",
        "doc": "npm run cleandoc && typedoc src/ --readme none"
    },
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "engines": {
        "node": "^8.7.0"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/mocha": "^5.2.0",
        "@types/node": "^9.6.6",
        "babel-cli": "^6.24.1",
        "babel-preset-env": "^1.5.1",
        "chai": "^4.1.2",
        "mocha": "^5.1.1",
        "nyc": "^11.7.1",
        "ts-mocha": "^1.0.3",
        "tslint": "^5.4.3",
        "typedoc": "^0.11.1",
        "typescript": "^2.3.4"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "html",
            "text",
            "text-summary"
        ]
    }
}
